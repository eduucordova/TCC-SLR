

<div class="fields">
  <div class="col-md-2">
    <%= f.hidden_field :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :username, { include_blank: true }, { :disabled => 'disabled' }) %>
  </div>
  <div class="col-md-10">
    <%= f.hidden_field :role_id %>
    <%= f.collection_select(:role_id, Role.all, :id, :name) %>
  </div>
</div>